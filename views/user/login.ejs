<% layout("/layout/boilerplate") -%>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 shadow-lg rounded-4 overflow-hidden login-wrapper">
    
    <!-- Left Side: Login Form -->
    <div class="col-12 col-md-6 p-5 bg-white d-flex align-items-center slide-in-left">
      <div class="login-card w-100">
        <h2 class="text-center mb-4 fw-bold text-navy">Login</h2>
        
        <form action="/login" method="POST" class="needs-validation" novalidate>
          <!-- Username -->
          <div class="mb-4">
            <label for="username" class="form-label fw-semibold">Username</label>
            <input 
              type="text" 
              name="username" 
              id="username" 
              placeholder="Enter username" 
              class="form-control input-custom" 
              required>
          </div>

          <!-- Password -->
          <div class="mb-4">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input 
              type="password" 
              name="password" 
              id="password" 
              placeholder="Enter password" 
              class="form-control input-custom" 
              required>
          </div>

          <!-- Submit -->
          <div class="text-center mt-3">
            <button class="btn btn-gradient w-100 py-2">Login</button>
            <p class="mt-3">Don't have an account? 
              <a href="/signup" class="fw-semibold text-decoration-none link-custom">Sign Up</a>
            </p>
          </div>
        </form>
      </div>
    </div>

    <!-- Right Side: Navy Blue Gradient -->
    <div class="col-12 col-md-6 login-right d-flex align-items-center justify-content-center slide-in-right">
      <h1 class="text-white fw-bold text-center fade-text">Welcome Back!</h1>
    </div>
  </div>
</div>

<style>
/* Wrapper */
.login-wrapper {
  border-radius: 20px;
  overflow: hidden;
}

/* Navy Blue Theme */
.text-navy {
  color: #000000;
}

/* Left Side Card */
.login-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  animation: fadeIn 0.8s ease;
}

/* Right Side with Navy Blue Gradient */
.login-right {
  background: linear-gradient(135deg, #000000, #000000, #000000);
  min-height: 300px;
  position: relative;
  overflow: hidden;
}

/* Floating Text Animation */
.fade-text {
  animation: float 3s ease-in-out infinite;
}

/* Input Styling */
.input-custom {
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 10px;
  transition: all 0.3s ease;
}
.input-custom:focus {
  border-color: #001f3f;
  box-shadow: 0 0 10px rgba(0,51,102,0.3);
}

/* Button Gradient */
.btn-gradient {
  background: linear-gradient(135deg, #000000, #000000);
  border: none;
  color: #fff;
  border-radius: 12px;
  transition: all 0.3s ease;
}
.btn-gradient:hover {
   background: linear-gradient(135deg, #000000, #000000);
  transform: translateY(-2px);
  box-shadow: 0 8px 15px rgba(0,0,0,0.2);
}

/* Links */
.link-custom {
  color: #001f3f;
  transition: color 0.3s;
}
.link-custom:hover {
  color: #001f3f;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}
.slide-in-left {
  animation: slideLeft 1s ease;
}
.slide-in-right {
  animation: slideRight 1s ease;
}
@keyframes slideLeft {
  from { transform: translateX(-100px); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}
@keyframes slideRight {
  from { transform: translateX(100px); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

/* Responsive */
@media(max-width: 768px) {
  .login-right {
    min-height: 200px;
    text-align: center;
    padding: 2rem;
  }
}
</style>
