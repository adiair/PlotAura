<style>
/* ---------------- General ---------------- */
body {
  background: #121212;
  color: #EDEDED;
  font-family: "Poppins", sans-serif;
  margin: 0;
  padding: 0;
}

/* ---------------- Filters Section ---------------- */
#filters {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  background: #1A1A1A;
  border-bottom: 1px solid #2E2E2E;
  box-shadow: 0 4px 15px rgba(0,0,0,0.4);
}

#filters::-webkit-scrollbar {
  display: none;
}

.filter {
  flex: 0 0 auto;
  text-align: center;
  padding: 0.7rem 1rem;
  border-radius: 1rem;
  background: linear-gradient(145deg, #202020, #2A2A2A);
  box-shadow: 3px 3px 8px #0d0d0d, -3px -3px 8px #2e2e2e;
  transition: all 0.35s ease;
  color: #AFAFAF;
  font-size: 0.85rem;
  min-width: 80px;
}

.filter:hover {
  transform: translateY(-6px) scale(1.05);
  background: linear-gradient(145deg, #3B82F6, #1E40AF);
  color: #fff;
  cursor: pointer;
  box-shadow: 4px 4px 12px rgba(0,0,0,0.6);
}

.filter i {
  font-size: 1.4rem;
  margin-bottom: 0.25rem;
  display: block;
}

/* ---------------- Tax Toggle ---------------- */
.tax-toggle {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  border: 1px solid #333;
  border-radius: 2rem;
  padding: 0.4rem 1rem;
  margin-left: 1rem;
  background: #222;
  box-shadow: inset 2px 2px 6px #0d0d0d, inset -2px -2px 6px #2e2e2e;
  transition: all 0.3s ease;
  color: #AFAFAF;
  font-size: 0.9rem;
}

.tax-toggle:hover {
  border-color: #3B82F6;
  color: #fff;
  background: linear-gradient(145deg, #2563EB, #1E3A8A);
  cursor: pointer;
}

/* ---------------- Listings ---------------- */
.listing-card {
  /* border-radius: 12rem; */
  overflow: hidden;
  gap: 10px;
  transition: transform 0.35s ease, box-shadow 0.35s ease;
  border: 1px solid #2E2E2E;
  background: linear-gradient(145deg, #1A1A1A, #262626);
  box-shadow: 3px 3px 10px rgba(0,0,0,0.6), -2px -2px 6px rgba(255,255,255,0.05);
  margin-bottom: 1.5rem;
  color: #CFCFCF;
}

.listing-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 6px 6px 18px rgba(0,0,0,0.7), -4px -4px 12px rgba(255,255,255,0.06);
  border-color: #3B82F6;
}

.listing-card img {
  border-radius: 1rem 1rem 0 0;
  object-fit: cover;
  height: 18rem;
  transition: transform 0.4s ease;
}

.listing-card:hover img {
  transform: scale(1.05);
}

.card-body {
  padding: 1rem;
}

.card-text {
  font-size: 0.95rem;
  color: #A0A0A0;
}

.card-text b {
  font-size: 1.1rem;
  color: #FFFFFF;
}

.tax-info {
  display: none;
  font-size: 0.85rem;
  color: #6F6F6F;
}
.cantain{
  background-color: white;
}

/* ---------------- Responsive ---------------- */
@media (max-width: 768px) {
  #filters {
    gap: 0.8rem;
    padding: 0.6rem 1rem;
  }

  .filter {
    padding: 0.5rem 0.7rem;
    font-size: 0.75rem;
  }

  .listing-card img {
    height: 14rem;
  }
}
</style>

