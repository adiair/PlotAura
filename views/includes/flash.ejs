<% if(success && success.length){ %>
  <div class="glass-alert success-alert col-6 offset-3" id="success-alert">
      <i class="bi bi-check-circle-fill"></i>
      <span><%= success %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="glass-alert error-alert col-6 offset-3" id="error-alert">
      <i class="bi bi-exclamation-triangle-fill"></i>
      <span><%= error %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<style>
/* Glass Base */
.glass-alert {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.8rem;
  padding: 1rem 1.5rem;
  border-radius: 18px;
  color: #fff;
  font-weight: 500;
  font-size: 1rem;
  backdrop-filter: blur(14px) saturate(180%);
  -webkit-backdrop-filter: blur(14px) saturate(180%);
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.25);
  box-shadow: 0 12px 30px rgba(0,0,0,0.35);
  animation: slideDown 0.7s ease forwards;
  transition: all 0.4s ease;
  cursor: default;
}

/* Success Style */
.success-alert {
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.8), rgba(25, 135, 84, 0.65));
  box-shadow: 0 10px 25px rgba(40, 167, 69, 0.45);
  animation: slideDown 0.7s ease forwards, glowGreen 2s infinite alternate;
}

/* Error Style */
.error-alert {
  background: linear-gradient(135deg, rgba(220, 53, 69, 0.8), rgba(181, 42, 54, 0.65));
  box-shadow: 0 10px 25px rgba(220, 53, 69, 0.45);
  animation: slideDown 0.7s ease forwards, glowRed 2s infinite alternate;
}

/* Icon */
.glass-alert i {
  font-size: 1.4rem;
}

/* Close Button */
.glass-alert .btn-close {
  filter: invert(1);
  opacity: 0.8;
  transition: transform 0.3s ease, opacity 0.3s ease;
}
.glass-alert .btn-close:hover {
  opacity: 1;
  transform: rotate(90deg) scale(1.2);
}

/* Entry Animation */
@keyframes slideDown {
  from { opacity: 0; transform: translateY(-30px) scale(0.9); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

/* Exit Animation */
@keyframes fadeOut {
  from { opacity: 1; transform: scale(1); }
  to { opacity: 0; transform: scale(0.9); }
}

/* Glow Animations */
@keyframes glowGreen {
  from { box-shadow: 0 10px 25px rgba(40, 167, 69, 0.45); }
  to   { box-shadow: 0 15px 35px rgba(40, 167, 69, 0.7); }
}

@keyframes glowRed {
  from { box-shadow: 0 10px 25px rgba(220, 53, 69, 0.45); }
  to   { box-shadow: 0 15px 35px rgba(220, 53, 69, 0.7); }
}

/* Hover Effect */
.glass-alert:hover {
  transform: translateY(-5px) scale(1.03);
}
</style>

<script>
// Auto-hide after 4s with fadeOut animation
setTimeout(() => {
  document.querySelectorAll('.glass-alert').forEach(alert => {
    alert.style.animation = "fadeOut 0.6s ease forwards";
    setTimeout(() => alert.remove(), 600);
  });
}, 4000);
</script>
