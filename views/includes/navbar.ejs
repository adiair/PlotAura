<style>
    /* ===== NAVBAR STYLE (Modern) ===== */
    .navbar-custom {
        background: #ffffff;
        padding: 0.9rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .navbar-brand img {
        max-height: 52px;
        margin-left: 40px;
        transition: transform 0.3s ease;
    }

    .navbar-brand img:hover {
        transform: scale(1.05);
    }

    .nav-link {
        color: #374151 !important;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #2563eb !important;
    }

    /* ===== SEARCH BAR ===== */
    .search-input {
        border-radius: 9999px;
        padding: 0.55rem 1.2rem;
        font-size: 0.9rem;
        border: 1px solid #d1d5db;
        transition: border 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border: 1px solid #2563eb;
        box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
    }

    .search-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #2563eb;
        gap: 8px;
        color: #fff;
        border-radius: 9999px;
        padding: 0.5rem 1.2rem;
        font-size: 0.9rem;
        font-weight: 500;
        border: none;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .search-btn:hover {
        background: #1e40af;
        transform: translateY(-2px);
    }

    /* ===== SIDEBAR MENU ===== */
    .sidebar {
        position: fixed;
        top: 0;
        right: -260px;
        height: 100%;
        width: 260px;
        background: #ffffff;
        transition: right 0.35s ease;
        padding: 2rem 1.5rem;
        z-index: 2000;
        box-shadow: -4px 0 12px rgba(0, 0, 0, 0.1);
    }

    .sidebar.open {
        right: 0;
    }

    .sidebar .nav-link {
        display: block;
        margin: 1rem 0;
        color: #374151 !important;
        font-size: 1rem;
    }

    .sidebar .nav-link:hover {
        color: #2563eb !important;
    }

    .sidebar-close {
        position: absolute;
        top: 16px;
        right: 20px;
        font-size: 1.5rem;
        color: #6b7280;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .sidebar-close:hover {
        color: #111827;
    }

    /* Hamburger Icon */
    .menu-toggle {
        font-size: 1.4rem;
        color: #374151;
        cursor: pointer;
        border: none;
        background: transparent;
    }
</style>

<!-- ===== NAVBAR ===== -->
<nav class="navbar navbar-expand-md navbar-custom">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <!-- Brand -->
        <a class="navbar-brand" href="/listing">
            <img src="/image/Skyflow.png" alt="Logo" class="img-fluid">
        </a>

        <!-- Search (Desktop only) -->
        <form class="d-none d-md-flex me-3" role="search" action="/listing" method="GET">
            <input class="form-control me-2 search-input" type="search" name="q" placeholder="Search destinations">
            <button class="search-btn" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
        </form>

        <!-- Desktop Menu -->
        <div class="d-none d-md-flex align-items-center gap-4">
            <a class="nav-link" href="/listing">Explore</a>
            <a class="nav-link" href="/listing/new">Create</a>
            <% if(!currUser){ %>
                <a class="nav-link" href="/signup">Sign up</a>
                <a class="nav-link" href="/login">Log in</a>
                <% } else { %>
                    <a class="nav-link" href="/logout">Log out</a>
                    <% } %>
        </div>

        <!-- Hamburger for Mobile -->
        <button class="menu-toggle d-md-none" onclick="toggleSidebar()">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
</nav>

<!-- ===== SIDEBAR (Mobile) ===== -->
<div class="sidebar" id="sidebar">
    <span class="sidebar-close" onclick="toggleSidebar()">
        <i class="fa-solid fa-xmark"></i>
    </span>

    <a class="nav-link fw-bold" href="/listing">SkyFlow</a>
    <a class="nav-link" href="/listing/new">Create your estate</a>

    <% if(!currUser){ %>
        <a class="nav-link" href="/signup">Sign up</a>
        <a class="nav-link" href="/login">Log in</a>
        <% } else { %>
            <a class="nav-link" href="/logout">Log out</a>
            <% } %>

                <!-- Mobile Search -->
                <form class="mt-3" role="search" action="/listing" method="GET">
                    <input class="form-control mb-2 search-input" type="search" name="q"
                        placeholder="Search destinations">
                    <button class="btn search-btn w-100" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i> Search
                    </button>
                </form>
</div>

<script>
    function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("open");
    }
</script>